@using Blog.Models.ViewModels
@model BlockViewModel

<script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/Content/ckeditor/adapters/jquery.js"></script>
<div>
    <p>
        <h2>Tạo khối</h2>
    </p>
    <!-- left column -->
    <!-- general form elements -->
    <div class="box">
        <div class="box-header">

        </div>
        <div class="box-body">
            <!-- form start -->
            @using (Html.BeginForm("Create", "Block", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true)

                    <div class="form-group has-feedback">
                        <label class="control-label col-md-2">Tên khối</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Tiêu đề" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>                   
                    <div class="form-group has-feedback">
                        <label class="control-label col-md-2">Nội dung</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Content, 4, 50, new { @class = "form-control ckeditor", @placeholder = "Nội dung" })
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label col-md-2">Kích hoạt</label>
                        <div class="col-md-10">
                            @Html.CheckBoxFor(model => model.status, new { @checked = "true"})
                        </div>
                    </div>           
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Tạo" class="btn btn-success" />
                            <a href="@Url.Action("Index", "Block")">
                                <span class="btn btn-primary">Cancel</span>
                            </a>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
            }
        </div>   <!-- /.box body -->
        <div class="box-footer">

        </div>
    </div><!-- /.box -->
</div>